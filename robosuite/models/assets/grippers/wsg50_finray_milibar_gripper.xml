<mujoco model="wsg50">
    <compiler angle="radian" autolimits="true" />
    <option impratio="10" cone="elliptic" />
    <!-- https://mujoco.readthedocs.io/en/stable/XMLreference.html?highlight=elliptic#option use
    elliptic cones for more realism -->
    <!-- <default>
        <default class="visual">
            <geom type="mesh" contype="0" conaffinity="0" group="1" />
        </default>
        <default class="collision">
            <geom type="mesh" group="0" />
        </default>
        <default class="finray_collision">
            <geom condim="6" friction="0.9 0.1 0.1" group="0" priority="1" />
        </default>
    </default> -->

    <asset>
        <material name="gripper" rgba="0.6 0.6 0.6 1" reflectance="0.1" />
        <material name="milibar" rgba="0.05 0.05 0.05 1" reflectance="0.4" />
        <material name="milibar_connector" rgba="0.4 0.4 0.45 1" reflectance="0.0" />
        <mesh name="base" file="meshes/wsg_50_gripper/WSG50_110.stl" />

        <texture type="2d" name="texture"
            file="meshes/wsg_50_gripper/finray/one_piece_wide_grasp_finray_finger_color.png" />
        <material name="finray_material" texture="texture" specular="0.5" shininess="0.0" />
        <mesh name="finger" file="meshes/wsg_50_gripper/finray/one_piece_wide_grasp_finray_finger.obj"
            scale="0.76923076923 1.0 1.0" />
        <mesh name="finger_collider" file="meshes/wsg_50_gripper/finray/collider.obj" scale="0.76923076923 1.0 1.0" />

        <mesh name="mount" file="meshes/wsg_50_gripper/mount.obj" />
        <mesh name="mount_collider_1" file="meshes/wsg_50_gripper/mount_collider_1.obj" />
        <mesh name="mount_collider_2" file="meshes/wsg_50_gripper/mount_collider_2.obj" />
    </asset>
    <worldbody>
        <body name="base" pos="0 0 0" quat="0.707107 0 0 -0.707107">
            <site name="ft_frame" pos="0 0 0" size="0.01 0.01 0.01" rgba="1 0 0 1" type="sphere" group="1"/>
            <site name="mount" group="0" />
            <!-- <camera name='debug' pos="-0.135 -0.200 0.087"
                xyaxes="0.825 -0.565 0.000 0.071 0.104 0.992" />
            <camera name='debug2' pos="-0.002 -0.145 -0.170"
                xyaxes="1.000 -0.005 -0.000 -0.005 -0.884 0.467" /> -->

            <!-- milibar -->
            <geom size="0.041 0.009" type="cylinder" material="milibar" group="1"
                pos="0 0 0.009" />
            <geom size="0.041 0.009" type="cylinder" group="0" pos="0 0 0.009" />

            <geom type="mesh" mesh="mount" material="milibar_connector" group="1"
                pos="0 0 0.008" euler="0 0 1.57079632679" />
            <geom type="mesh" mesh="mount_collider_1" group="0" pos="0 0 0.008"
                euler="0 0 1.57079632679" />
            <geom type="mesh" mesh="mount_collider_2" group="0" pos="0 0 0.008"
                euler="0 0 1.57079632679" />
            <site name="cam_mount" size="0.001" group="1"
                pos="-0.032507  -0.065 0.054202" />

            <geom mesh="base" type="mesh" group="1" mass="0.5" material="gripper"
                pos="0 0 0.03" />
            <geom size="0.073 0.025 0.036" type="box" group="0" pos="0 0 0.066" />

            <body name="right_finger" pos="0 0 0.102" euler="0 0 1.57079632679">
                <joint name="right_driver_joint" range="-0.054 0" damping="20"
                    type="slide" axis="0 1 0" />
                <geom mesh="finger" type="mesh" group="1" mass="0.1" material="finray_material" />
                <geom mesh="finger_collider" type="mesh" group="0" name="right_finger_collision" />
                <geom mesh="finger_collider" type="mesh" group="0" name="right_finger_pad_collision" />
                <!-- <geom size="0.01 0.006 0.015" type="box" group="0" pos="0 -0.003 0.12" name="right_finger_pad_collision" />
                <geom size="0.01 0.006 0.015" type="box" group="1" pos="0 -0.003 0.12" rgba="1 0 0 0.1" name="right_finger_pad_visual" /> -->
            </body>
            <body name="left_finger" pos="0 0 0.102" euler="0 0 -1.57079632679">
                <joint name="left_driver_joint" range="0 0.054" damping="20"
                    type="slide" axis="0 -1 0" />
                <geom mesh="finger" type="mesh" group="1" mass="0.1" material="finray_material" />
                <geom mesh="finger_collider" type="mesh" group="0" name="left_finger_collision" />
                <geom mesh="finger_collider" type="mesh" group="0" name="left_finger_pad_collision" />
                <!-- <geom size="0.01 0.006 0.015" type="box" group="0" pos="0 -0.003 0.12" name="left_finger_pad_collision" />
                <geom size="0.01 0.006 0.015" type="box" group="1" pos="0 -0.003 0.12" rgba="1 0 0 0.1" name="left_finger_pad_visual" /> -->
            </body>
            <body name="eef" pos="0 0 0.24" quat="1 0 0 0">
                <site name="grip_site" pos="0 0 0" size="0.01 0.01 0.01" rgba="1 0 0 0.5" type="sphere" group="1"/>
                <site name="ee_x" pos="0.1 0 0" size="0.005 .1"  quat="0.707105  0 0.707108 0 " rgba="1 0 0 0" type="cylinder" group="1"/>
                <site name="ee_y" pos="0 0.1 0" size="0.005 .1" quat="0.707105 0.707108 0 0" rgba="0 1 0 0" type="cylinder" group="1"/>
                <site name="ee_z" pos="0 0 0.1" size="0.005 .1" quat="1 0 0 0" rgba="0 0 1 0" type="cylinder" group="1"/>
                <!-- This site was added for visualization. -->
                <site name="grip_site_cylinder" pos="0 0 0" size="0.005 10" rgba="0 1 0 0.3" type="cylinder" group="1"/>
            </body>
        </body>
    </worldbody>
    <sensor>
        <force name="force_ee" site="ft_frame"/>
        <torque name="torque_ee" site="ft_frame"/>
    </sensor>
    <actuator>
        <position name="gripper_finger_joint1" kp="2000" forcerange="-80 80" ctrlrange="0 0.054" joint="left_driver_joint" />
        <position name="gripper_finger_joint2" kp="2000" forcerange="-80 80" ctrlrange="-0.054 0" joint="right_driver_joint" />
    </actuator>
</mujoco>
    